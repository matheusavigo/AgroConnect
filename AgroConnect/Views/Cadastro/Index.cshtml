@model AgroConnect.Models.Cadastro

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Cadastro";
}

<div class="col-md-8 col-lg-6 mt-5 mb-5" style="background: #FFF; border-radius: 10px; padding: 20px; margin: auto;">
    <h2 class="mb-4 text-center">Cadastro</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    else if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <form method="post" action="@Url.Action("Cadastrar", "Cadastro")">
        <!-- Nome -->
        <div class="form-group">
            <label asp-for="Nome"></label>
            <input name="Nome" class="form-control" placeholder="Digite seu nome" required />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="form-row">
     
            <div class="form-group col-md-6">
                <label asp-for="Email"></label>
                <input name="Email" class="form-control" placeholder="Digite seu email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="Telefone"></label>
                <input name="Telefone" class="form-control" placeholder="Digite seu telefone" required />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Endereco"></label>
            <input name="Endereco" class="form-control" placeholder="Digite seu endereço" required />
            <span asp-validation-for="Endereco" class="text-danger"></span>
        </div>

        <div class="form-row">

            <div class="form-group col-md-4">
                <label asp-for="Numero"></label>
                <input name="Numero" class="form-control" placeholder="Digite seu número" required />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>

            <div class="form-group col-md-4">
                <label asp-for="Cep"></label>
                <input name="Cep" class="form-control" placeholder="Digite seu CEP" required />
                <span asp-validation-for="Cep" class="text-danger"></span>
            </div>

            <div class="form-group col-md-4">
                <label asp-for="Senha"></label>
                <input name="Senha" class="form-control" placeholder="Digite sua senha" type="password" required />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-success mt-4">Salvar Cadastro</button>
            <a href="~/Home/Index" class="btn btn-secondary mt-4">Cancelar</a>
        </div>
    </form>

</div>[

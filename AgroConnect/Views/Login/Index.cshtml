@model AgroConnect.Models.LoginModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Login";
}

@if (TempData["SuccessMessage"] != null)
{
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var successMessage = @Html.Raw(Json.Encode(TempData["SuccessMessage"]));
            toastr.success(successMessage);
        });
    </script>
}

@if (TempData["ErrorMessage"] != null)
{
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var errorMessage = @Html.Raw(Json.Encode(TempData["ErrorMessage"]));
            toastr.error(errorMessage);
        });
    </script>
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 mt-4 mb-4" style="background: #FFF; border-radius: 10px; padding: 20px;">
            <h2 class="text-center">Login</h2>
            @using (Html.BeginForm("Logar", "Login", FormMethod.Post))
            {
                

                <div class="form-group">
                    @Html.LabelFor(m => m.Username, "E-mail ou Número de Telefone")
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                </div>
                <div class="form-group mt-2">
                    @Html.LabelFor(m => m.Password, "Senha")
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-success btn-block">Logar</button>
                    <a href="@Url.Action("Index", "Cadastro")" class="btn btn-secondary btn-block">Novo Cadastro</a>
                </div>
            }
        </div>
    </div>
</div>
